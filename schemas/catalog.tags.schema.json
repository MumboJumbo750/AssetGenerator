{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "catalog.tags.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "createdAt", "updatedAt", "groups"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "groups": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "label", "exclusive", "tags"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "label": { "type": "string", "minLength": 1 },
          "exclusive": { "type": "boolean" },
          "tags": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["id", "label"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "label": { "type": "string", "minLength": 1 },
                "promptToken": { "type": "string" },
                "aliases": { "type": "array", "items": { "type": "string" } },
                "reviewTools": {
                  "description": "UI tools to activate when reviewing assets with this tag.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "required": ["type"],
                    "properties": {
                      "type": {
                        "type": "string",
                        "enum": [
                          "overlay_grid",
                          "bg_cycler",
                          "reference_ghost",
                          "safe_area",
                          "onion_skin",
                          "color_picker",
                          "horizon_line"
                        ]
                      },
                      "config": { "type": "object", "additionalProperties": true }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
