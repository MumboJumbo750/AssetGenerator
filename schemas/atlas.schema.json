{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "atlas.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "projectId", "createdAt", "updatedAt", "imagePath", "frames", "packSettings"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "projectId": { "type": "string", "minLength": 1 },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" },
    "imagePath": { "type": "string", "minLength": 1 },
    "packSettings": { "type": "object", "additionalProperties": true },
    "frames": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "sourcePath", "rect", "sourceSize"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "sourcePath": { "type": "string", "minLength": 1 },
          "rect": {
            "type": "object",
            "additionalProperties": false,
            "required": ["x", "y", "w", "h"],
            "properties": {
              "x": { "type": "integer", "minimum": 0 },
              "y": { "type": "integer", "minimum": 0 },
              "w": { "type": "integer", "minimum": 1 },
              "h": { "type": "integer", "minimum": 1 }
            }
          },
          "sourceSize": {
            "type": "object",
            "additionalProperties": false,
            "required": ["w", "h"],
            "properties": {
              "w": { "type": "integer", "minimum": 1 },
              "h": { "type": "integer", "minimum": 1 }
            }
          },
          "pivot": {
            "type": "object",
            "additionalProperties": false,
            "required": ["x", "y"],
            "properties": {
              "x": { "type": "number" },
              "y": { "type": "number" }
            }
          }
        }
      }
    }
  }
}
